{
  "compilerOptions": {
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "alwaysStrict": true,
    "outDir": "dist",
    "declaration": true,
    "module": "commonjs",
    "noUnusedLocals": true,
    "noUnusedParameters": true, 
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "target": "es5",
    "sourceMap": true,
    "strictNullChecks": true,

    "lib": [
      "es5",
      "es6",
      "dom",
      "es2015.core",
      "es2015.collection",
      "es2015.generator",
      "es2015.iterable",
      "es2015.promise",
      "es2015.proxy",
      "es2015.reflect",
      "es2015.symbol",
      "es2015.symbol.wellknown",
      "esnext.asynciterable"
    ]
  },

  "compileOnSave": true
}